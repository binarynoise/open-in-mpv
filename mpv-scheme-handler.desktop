[Desktop Entry]
Version=1.0
Type=Application
Exec=sh -c 'URL="%u"; URL=${URL#mpv://watch#}; mpv --keep-open --player-operation-mode=pseudo-gui "${URL}" || notify-send -i mpv -t 5000 -A Close -A Open=Open "Opening ${URL} failed" | { [ "$(head -n1)" = "Open" ] && xdg-open "${URL}";}'
Icon=mpv
StartupNotify=true
Terminal=false
MimeType=x-scheme-handler/mpv
Name=MPV Launcher
Comment=Launch MPV
Hidden=true

# copy to ~/.local/share/applications/mpv-scheme-handler.desktop
# Version 3
# update this version in background.js and open-in-mpv.plugin.js
